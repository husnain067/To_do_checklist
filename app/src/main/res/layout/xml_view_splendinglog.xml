<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xml_date_view"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.66"
            android:background="@drawable/border_line"
            android:text="3/8"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/xml_spent_view"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.66"
            android:background="@drawable/border_line"
            android:text="100"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/xml_budget_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.66"
            android:padding="2dp"
            android:background="@drawable/border_line"
            android:text="120"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/xml_storeN_view"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.66"
            android:background="@drawable/border_line"
            android:text="ABC"
            android:textAlignment="center"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/xml_tick"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.66"
            android:background="@drawable/border_line"
            android:src="@drawable/tick"
            android:layout_gravity="center"

            />

        <ImageView
            android:id="@+id/xml_cross"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.66"
            android:background="@drawable/border_line"
            android:src="@drawable/x_mark"
           android:layout_gravity="center"

           />


    </LinearLayout>
</LinearLayout>